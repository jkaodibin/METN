{% extends 'layout.twig' %}

{% block body %}
  <div class="container-fluid" style="margin-top: 80px;">
    <div class="row">
      <div class="col-lg-3">
        <div class="profileSidbarContainer">
          <div class="card border border-info border-opacity-25 profileSidbar text-right p-4">
            <div class="card-header">
              <h3>Chercher un Job</h3>
            </div>
            <form action="">
              <label class="bold" for="categorie">Domaine</label>
              <select id="categorie" name="categorie[]" class="select2-categorie">
                  <option value="Wonosari">3D Software</option>
                  <option value="Antipolo">Web Developpement</option>
                  <option value="Lesuhe">Photoshop</option>
                  <option selected value="Sunzhuang">Game developper</option>
                  <option value="Hongchuan">Data sientist</option>
                  <option value="France">Site vitrine</option>
                  <option selected value="Brazil">Web app</option>
                  <option selected value="Yemen">Cinema</option>
                  <option selected value="United States">Wedding shoot</option>
                  <option value="China">Sound producer</option>
                  <option value="Argentina">Logo makeup</option>
                  <option value="Bulgaria">Woocomerce</option>
              </select>


              <label for="lieu">Lieu</label>
              <select id="lieu" name="lieu[]" class="select2-lieu">
                  <option value="Wonosari">Antananarivo</option>
                  <option value="Antipolo">Majanga</option>
                  <option value="Lesuhe">Analamanga</option>
                  <option selected value="Sunzhuang">Anosy</option>
                  <option value="Hongchuan">Saint-marie</option>
                  <option value="France">Tamatave</option>
                  <option selected value="Brazil">Toliary</option>
                  <option selected value="Yemen">Fianarantsoa</option>
                  <option selected value="United States">Antsirabe</option>
                  <option value="China">Europe</option>
                  <option value="Argentina">Chine</option>
                  <option value="Bulgaria">USA</option>
              </select>


              <label for="type">Type de travail</label>
              <select id="type" name="type[]" class="select2-type">
                  <option value="Wonosari">en Locale</option>
                  <option value="Antipolo">en Remote</option>
              </select>

              <h5 class="bold mt-3">Experience</h5>
              <div class="ps-4 ">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                  <label class="form-check-label" for="flexCheckDefault">
                    Senior
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                  <label class="form-check-label" for="flexCheckChecked">
                    Junior
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                  <label class="form-check-label" for="flexCheckChecked">
                    Debutant
                  </label>
                </div>
              </div>  

              
              <h5 class="bold mt-3">Renumeration</h5>
              <input type="text" name="renumeration[]" id="rangeSliderPrix">
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-4">

